<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="404dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#4C73A7"
            android:fontFamily="@font/arcade_classic"
            android:gravity="center"
            android:text="Donate  points"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/flag" />

        <TextView
            android:id="@+id/textDonatePoints"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="You currently have: 0 pts. Please, enter the points you want to donate"
            android:textAlignment="center"
            android:textColor="#4C73A7"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inputPoints"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FD0000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginRight="20dp"
                android:background="@drawable/button_round_corners_blue"
                android:fontFamily="@font/arcade_classic"
                android:radius="50dp"
                android:text="Cancel"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/button_round_corners_blue"
                android:fontFamily="@font/arcade_classic"
                android:radius="50dp"
                android:text="Donate"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp"
                android:visibility="visible" />

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>