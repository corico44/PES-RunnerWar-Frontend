<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:importantForAccessibility="no" android:background="#4C73A7">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rectangle" android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bosque" android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="200dp"/>

    <View
            android:id="@+id/rectanguloBlanco"
            android:layout_width="411dp"
            android:layout_height="549dp"
            android:background="@drawable/bg_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/tiofull_1" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView8" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/tiofull_3" android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.683"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="231dp"
            android:layout_height="212dp" app:srcCompat="@drawable/flag" android:id="@+id/imageView8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TEAM RED"
            android:layout_width="wrap_content"
            android:fontFamily="@font/font_arcade_classic"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco" app:layout_constraintHorizontal_bias="0.227"
            app:layout_constraintVertical_bias="0.397" android:textColor="@android:color/black"
            android:textSize="18sp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rectangle_19" android:id="@+id/imageButton4"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="azul"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintBottom_toTopOf="@+id/imageButton5"/>
    <TextView
            android:fontFamily="@font/font_arcade_classic"
            android:layout_width="260dp"
            android:layout_height="63dp" android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="@+id/imageButton4"
            app:layout_constraintEnd_toEndOf="@+id/imageButton4" app:layout_constraintHorizontal_bias="0.333"
            android:text="We   are   all   the   same   but   the   blue faction   fights   until   they   can no longer Join   us   and   fight   with   your brothers   for   a   better   Barcelona!"
            app:layout_constraintTop_toTopOf="@+id/imageButton4"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton4"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:text="Proceed >"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rectangle_21" android:id="@+id/imageButton5"
            app:layout_constraintTop_toBottomOf="@+id/imageButton4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="naranja"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintBottom_toTopOf="@+id/imageButton6"/>
    <TextView
            android:fontFamily="@font/font_arcade_classic"
            android:layout_width="260dp"
            android:layout_height="63dp" android:id="@+id/textView6"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="@+id/imageButton5"
            app:layout_constraintEnd_toEndOf="@+id/imageButton5" app:layout_constraintHorizontal_bias="0.483"
            android:text="This   is   not   a   game  this   is   a   real confrontation    If   you   wanna   win then   join   us!"
            app:layout_constraintTop_toTopOf="@+id/imageButton5"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton5"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rectangle_22" android:id="@+id/imageButton6"
            app:layout_constraintTop_toBottomOf="@+id/imageButton5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.488"
            android:contentDescription="verde"/>
    <TextView
            android:fontFamily="@font/font_arcade_classic"
            android:layout_width="260dp"
            android:layout_height="63dp" android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="@+id/imageButton6"
            app:layout_constraintEnd_toEndOf="@+id/imageButton6"
            android:text="Together   we   will  dominate   all   of Barcelona   and   all   factions   will know   that   green   is   the   best   Come with  us!"
            app:layout_constraintTop_toBottomOf="@+id/imageButton5"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton6"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rectangle_20" android:id="@+id/imageButton2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/rectanguloBlanco"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.071"
            android:layout_marginTop="90dp" android:visibility="visible" android:contentDescription="amarillo"
            app:layout_constraintHorizontal_bias="0.494"/>
    <TextView
            android:text="CHOOSE A TEAM!"
            android:fontFamily="@font/font_arcade_classic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/rectanguloBlanco" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.278" android:textSize="36sp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="WAR AND PEACE CAN GO HAND IN HAND IF U WANT TO FIGHT FOR THE PEACE OF ALL THE YELLOW FACTION AWAITS YOU!"
            android:fontFamily="@font/font_arcade_classic"
            android:layout_width="260dp"
            android:layout_height="63dp" android:id="@+id/textView5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="@+id/imageButton2"
            app:layout_constraintEnd_toEndOf="@+id/imageButton2" app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintTop_toTopOf="@+id/imageButton2"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton2"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/pj_2" android:id="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/imageView9" app:layout_constraintTop_toTopOf="@+id/imageView9"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintVertical_bias="0.272"/>
    <ImageView
            android:layout_width="128dp"
            android:layout_height="221dp" app:srcCompat="@drawable/camiseta__5_" android:id="@+id/imageView9"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.71"/>


</androidx.constraintlayout.widget.ConstraintLayout>

