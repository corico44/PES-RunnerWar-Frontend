<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:importantForAccessibility="no" android:background="#4C73A7">

    <ImageView
            android:layout_width="416dp"
            android:layout_height="275dp" app:srcCompat="@drawable/sky" android:id="@+id/cielo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/app_name"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="585dp"
            android:layout_height="1011dp" app:srcCompat="@drawable/bosque" android:id="@+id/bosque"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <View
            android:id="@+id/rectanguloBlanco"
            android:layout_width="417dp"
            android:layout_height="510dp"
            android:background="@drawable/bg_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.833"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/tio" android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginStart="25dp" android:layout_marginTop="20dp"
            app:layout_constraintVertical_bias="0.3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/reg_userName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Name"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
            app:layout_constraintBottom_toTopOf="@+id/reg_email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/reg_email"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Email"
            app:layout_constraintTop_toBottomOf="@+id/reg_userName"
            app:layout_constraintBottom_toTopOf="@+id/reg_password"/>
    <CheckBox
            android:text="Yes, I agree witth the terms and services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/reg_checkbox"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/login_button" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/reg_password"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="22dp" android:layout_marginStart="22dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName">

    </com.google.android.material.textfield.TextInputLayout>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/reg_password"
            android:hint="Password"
            app:layout_constraintTop_toBottomOf="@+id/reg_email" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/reg_checkbox"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="SIGN UP"
            android:fontFamily="@font/font_arcade_classic"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cielo"
            app:layout_constraintBottom_toTopOf="@+id/reg_userName"
            android:textSize="20sp" android:textColor="@android:color/black"/>
    <Button
            android:text="Proceed >"
            android:background="#4C73A7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/login_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/rectanguloBlanco"
            app:layout_constraintTop_toBottomOf="@+id/reg_checkbox" android:textColor="@color/cardview_light_background"/>
    <TextView
            android:text="Existing user? LOG IN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/login_button"
            app:layout_constraintBottom_toBottomOf="@+id/rectanguloBlanco" app:layout_constraintVertical_bias="0.448"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

