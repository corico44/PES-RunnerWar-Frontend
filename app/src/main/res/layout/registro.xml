<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.registro.RegistroActivity" android:importantForAccessibility="no"
        android:background="#4C73A7">



    <ImageView
            android:layout_width="416dp"
            android:layout_height="275dp" app:srcCompat="@drawable/sky" android:id="@+id/cielo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/app_name"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bosque_upd" android:id="@+id/bosque"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <View
            android:id="@+id/rectanguloBlanco"
            android:layout_width="417dp"
            android:layout_height="510dp"
            android:background="@drawable/bg_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="431dp"
            android:layout_height="398dp" app:srcCompat="@drawable/tio" android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/cielo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginStart="25dp" android:layout_marginTop="19dp"
            app:layout_constraintVertical_bias="0.541" app:layout_constraintHorizontal_bias="0.396"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="22dp" android:layout_marginStart="22dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" android:id="@+id/textInputLayout">

        <TextView
            android:id="@+id/error"
            android:layout_width="262dp"
            android:layout_height="33dp"
            android:layout_marginStart="72dp"
            android:textColor="#F44336"
            android:textSize="10sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="222dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="P4ssw0rd"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_email" />

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="223dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="johnsondoe@gmail.com"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_userName" />

    <EditText
        android:id="@+id/reg_userName"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="Johnson"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:fontFamily="@font/font_arcade_classic"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="SIGN UP"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectanguloBlanco"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="201dp"
        android:layout_height="46dp"
        android:background="@drawable/button_round_corners_blue"
        android:radius="50dp"
        android:text="Proceed"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectanguloBlanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_password"
        app:layout_constraintVertical_bias="0.459" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="113dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="150dp"
        android:text="Password"
        android:textColor="#55699A"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/reg_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_email"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="181dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="135dp"
        android:text="Username"
        android:textAllCaps="false"
        android:textColor="#55699A"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/reg_userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="170dp"
        android:text="Email"
        android:textColor="#55699A"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/reg_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_userName"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/ex_us_login"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:background="@drawable/button_round_corners_gray"
        android:text="Existing user? LOG IN"
        app:layout_constraintBottom_toBottomOf="@+id/rectanguloBlanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_button"
        app:layout_constraintVertical_bias="0.242" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="172dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_button"
        app:layout_constraintVertical_bias="0.739"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/ingles"
        android:layout_width="49dp"
        android:layout_height="31dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_signup"
        app:srcCompat="@drawable/english" />

    <ImageButton
        android:id="@+id/castellano"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toEndOf="@+id/imageButton7"
        app:layout_constraintTop_toBottomOf="@+id/password_signup"
        app:layout_constraintVertical_bias="0.509"
        app:srcCompat="@drawable/castellano" />


</androidx.constraintlayout.widget.ConstraintLayout>

