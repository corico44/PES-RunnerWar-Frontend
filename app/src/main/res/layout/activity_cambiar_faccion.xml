<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.runnerwar.MainActivity" android:importantForAccessibility="no" android:background="#4C73A7">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rectangle" android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:layout_width="757dp"
            android:layout_height="918dp" app:srcCompat="@drawable/bosque" android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.86" android:layout_marginBottom="200dp"
            app:layout_constraintHorizontal_bias="0.76"/>
    <View
            android:id="@+id/rectanguloBlanco"
            android:layout_width="411dp"
            android:layout_height="549dp"
            android:background="@drawable/bg_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/tiofull_1" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView8" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="231dp"
            android:layout_height="212dp" app:srcCompat="@drawable/flag" android:id="@+id/imageView8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.494"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rectangle_19" android:id="@+id/imageButton4"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="azul"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintBottom_toTopOf="@+id/imageButton5" android:background="#FFFFFF"/>

    <TextView
        android:id="@+id/texto_azul"
        android:layout_width="260dp"
        android:layout_height="63dp"
        android:fontFamily="@font/font_arcade_classic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton4"
        app:layout_constraintEnd_toEndOf="@+id/imageButton4"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="@+id/imageButton4" />
    <ImageButton
            android:layout_width="wrap_content"
            android:text="Proceed >"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rectangle_21" android:id="@+id/imageButton5"
            app:layout_constraintTop_toBottomOf="@+id/imageButton4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="naranja"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintBottom_toTopOf="@+id/imageButton6" android:background="#FFFFFF"
    />

    <TextView
        android:id="@+id/texto_rojo"
        android:layout_width="260dp"
        android:layout_height="63dp"
        android:fontFamily="@font/font_arcade_classic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton5"
        app:layout_constraintEnd_toEndOf="@+id/imageButton5"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/imageButton5"
        app:layout_constraintTop_toTopOf="@+id/imageButton5" />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rectangle_22" android:id="@+id/imageButton6"
            app:layout_constraintTop_toBottomOf="@+id/imageButton5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.488"
            android:contentDescription="verde" android:background="#FFFFFF"/>

    <TextView
        android:id="@+id/texto_verde"
        android:layout_width="260dp"
        android:layout_height="63dp"
        android:fontFamily="@font/font_arcade_classic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton6"
        app:layout_constraintEnd_toEndOf="@+id/imageButton6"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/imageButton6"
        app:layout_constraintTop_toBottomOf="@+id/imageButton5"
        app:layout_constraintVertical_bias="0.758" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:background="#FFFFFF"
        android:contentDescription="amarillo"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:srcCompat="@drawable/rectangle_20" />
    <TextView
            android:text="CHANGE YOUR TEAM!"
            android:fontFamily="@font/font_arcade_classic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titulo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rectanguloBlanco"
            app:layout_constraintBottom_toBottomOf="@+id/rectanguloBlanco"
            app:layout_constraintVertical_bias="0.031" android:textSize="36sp"
            android:textColor="@android:color/black" app:layout_constraintHorizontal_bias="0.512"/>

    <TextView
        android:id="@+id/texto_amarillo"
        android:layout_width="260dp"
        android:layout_height="63dp"
        android:fontFamily="@font/font_arcade_classic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="@+id/imageButton2" />
    <ImageView
            android:layout_width="109dp"
            android:layout_height="125dp" app:srcCompat="@drawable/pj_pelirroja" android:id="@+id/imageView3"
            app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.524" app:layout_constraintVertical_bias="0.808"/>


</androidx.constraintlayout.widget.ConstraintLayout>

