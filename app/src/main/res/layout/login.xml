<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginActivity" android:importantForAccessibility="no"
        android:background="#4C73A7">

    <ImageView
            android:layout_width="416dp"
            android:layout_height="275dp" app:srcCompat="@drawable/sky" android:id="@+id/cielo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/app_name"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bosque_upd" android:id="@+id/bosque"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <View
            android:id="@+id/rectanguloBlanco"
            android:layout_width="417dp"
            android:layout_height="510dp"
            android:background="@drawable/bg_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="431dp"
            android:layout_height="398dp" app:srcCompat="@drawable/tio" android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/cielo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginStart="25dp" android:layout_marginTop="19dp"
            app:layout_constraintVertical_bias="0.541" app:layout_constraintHorizontal_bias="0.396"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="22dp" android:layout_marginStart="22dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" android:id="@+id/textInputLayout">

    </com.google.android.material.textfield.TextInputLayout>
    <EditText
            android:layout_width="222dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_signup"
            app:layout_constraintTop_toBottomOf="@+id/cuenta_email"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481" android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="272dp"/>
    <EditText
            android:layout_width="223dp"
            android:layout_height="49dp"
            android:ems="10"
            android:id="@+id/cuenta_email"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Johnsondoe@nomail.com"
            android:inputType="textEmailAddress"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/bosque"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="LOG IN"
            android:fontFamily="@font/font_arcade_classic"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="50sp" android:textColor="@android:color/black" android:gravity="center"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/rectanguloBlanco"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.048"
            android:layout_marginBottom="100dp" android:layout_marginTop="10dp"/>
    <Button
            android:text="Proceed >"
            android:background="#4C73A7"
            android:layout_width="201dp"
            android:layout_height="46dp" android:id="@+id/signup_button"
            app:layout_constraintStart_toStartOf="parent"
            android:radius="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/rectanguloBlanco"
            android:textColor="@color/cardview_light_background" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/password_signup" app:layout_constraintVertical_bias="0.201"
            app:layout_constraintHorizontal_bias="0.433" android:layout_marginBottom="212dp"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            android:textSize="18sp"
            android:textColor="#55699A" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cuenta_email"
            android:layout_marginEnd="150dp" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="7dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="320dp"/>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            android:textSize="18sp"
            android:textColor="#55699A" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="170dp" app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintTop_toTopOf="@+id/textInputLayout"/>
    <Button
            android:text="Newbie? CREATE ACCOUNT"
            android:layout_width="180dp"
            android:layout_height="60dp" android:id="@+id/CreateAccButto"
            app:layout_constraintTop_toBottomOf="@+id/signup_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.092"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.446"/>


</androidx.constraintlayout.widget.ConstraintLayout>