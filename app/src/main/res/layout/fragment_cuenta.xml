<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.chat.ChatFragment" android:background="@color/colorPrimary">

    <ImageView
            android:layout_width="547dp"
            android:layout_height="352dp" app:srcCompat="@drawable/sky" android:id="@+id/cielo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/app_name"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:src="@drawable/pj_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.38"
            android:layout_marginBottom="500dp"/>
    <View
            android:id="@+id/rectanguloBlanco"
            android:layout_width="417dp"
            android:layout_height="510dp"
            android:background="@drawable/bg_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.833" android:layout_marginBottom="4dp"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="43dp" android:id="@+id/boton_edit"
            app:layout_constraintStart_toEndOf="@+id/rectanguloBlanco" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="500dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="355dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.929" app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="100dp" android:layout_marginEnd="100dp"
            android:background="@drawable/boton_edit"/>
    <ImageButton
            android:layout_width="33dp"
            android:layout_height="44dp" android:id="@+id/imageButton3"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/cielo" android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/rectanguloBlanco" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/cielo"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginRight="30dp" android:layout_marginEnd="30dp"
            android:background="@drawable/boton_eliminar"/>
    <TextView
            android:text="MI NOMBRE"
            android:layout_width="240dp"
            android:layout_height="49dp" android:id="@+id/nombreCuenta"
            android:layout_marginLeft="71dp" android:layout_marginStart="71dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1" app:layout_constraintTop_toTopOf="@+id/rectanguloBlanco"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>